<nodeDefs>
    <!-- NODE DEF for Somfy TaHoma / Phantom Blinds NodeServer -->
    <!-- Polyglot v3 - ISY 5.0+ compatible -->
    <!-- controller, this must match the id in your Controller class-->
    <nodeDef id="hdctrl" nls="ctl">
        <editors />
        <sts>
		  <st id="ST" editor="CTD" />
		  <st id="GV0" editor="ID" />
	    </sts>
        <cmds>
          <sends>
            <!-- These are for our heartbeat -->
            <cmd id="DON" />
            <cmd id="DOF" />
          </sends>
          <accepts>
            <cmd id="QUERY" />
            <cmd id="DISCOVER" />
            <cmd id="REMOVE_NOTICES_ALL" />
          </accepts>
        </cmds>
    </nodeDef>
	<!-- TaHoma Shade (with tilt) -->
    <nodeDef id="shadeid" nls="shade">
        <editors />
        <sts>
            <st id="GV0" editor="ID" />
            <st id="ST" editor="BOOL" />
            <st id="GV1" editor="ID" />
            <st id="GV2" editor="POSITION" uom="100" />
            <st id="GV3" editor="POSITION" uom="100" />
            <st id="GV4" editor="TILT" uom="100" />
            <st id="GV5" editor="SHADECAP" />
            <st id="GV6" editor="BATTERYST" />
        </sts>
        <cmds>
          <sends>
			<cmd id="DON" />
			<cmd id="DOF" />
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
            <cmd id="TILTOPEN" />
            <cmd id="TILTCLOSE" />
          </sends>
          <accepts>
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
            <cmd id="TILTOPEN" />
            <cmd id="TILTCLOSE" />
            <cmd id="QUERY" />
            <cmd id="SETPOS" >
              <p id="SETPRIM" editor="POSITION" />
              <p id="SETSECO" editor="POSITION" />
              <p id="SETTILT" editor="TILT" />
            </cmd>
          </accepts>
        </cmds>
    </nodeDef>
	<!-- TaHoma Shade (no tilt) -->
    <nodeDef id="shadenotiltid" nls="shade">
        <editors />
        <sts>
            <st id="GV0" editor="ID" />
            <st id="ST" editor="BOOL" />
            <st id="GV1" editor="ID" />
            <st id="GV2" editor="POSITION" uom="100" />
            <st id="GV3" editor="POSITION" uom="100" />
            <st id="GV5" editor="SHADECAP" />
            <st id="GV6" editor="BATTERYST" />
        </sts>
        <cmds>
          <sends>
			<cmd id="DON" />
			<cmd id="DOF" />
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
          </sends>
          <accepts>
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
            <cmd id="QUERY" />
            <cmd id="SETPOS" >
              <p id="SETPRIM" editor="POSITION" />
              <p id="SETSECO" editor="POSITION" />
            </cmd>
          </accepts>
        </cmds>
    </nodeDef>
	<!-- TaHoma Shade (primary position only) -->
    <nodeDef id="shadeonlyprimid" nls="shade">
        <editors />
        <sts>
            <st id="GV0" editor="ID" />
            <st id="ST" editor="BOOL" />
            <st id="GV1" editor="ID" />
            <st id="GV2" editor="POSITION" uom="100" />
            <st id="GV5" editor="SHADECAP" />
            <st id="GV6" editor="BATTERYST" />
        </sts>
        <cmds>
          <sends>
			<cmd id="DON" />
			<cmd id="DOF" />
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
          </sends>
          <accepts>
            <cmd id="OPEN" />
            <cmd id="CLOSE" />
            <cmd id="STOP" />
            <cmd id="QUERY" />
            <cmd id="SETPOS" >
              <p id="SETPRIM" editor="POSITION" />
            </cmd>
          </accepts>
        </cmds>
    </nodeDef>
	<!-- TaHoma Scenario (automation) -->
    <nodeDef id="sceneid" nls="scene">
        <editors />
        <sts>
		  <st id="ST" editor="BOOL" />
          <st id="GV0" editor="ID" />
        </sts>
        <cmds>
          <sends>
            <cmd id="DON" />
            <cmd id="DOF" />
          </sends>
          <accepts>
            <cmd id="ACTIVATE" />
            <cmd id="QUERY" />
          </accepts>
        </cmds>
    </nodeDef>
</nodeDefs>
